root = true

[*]
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[.*]
indent_size = 2
indent_style = space

[*.swift]
indent_size = 4
indent_style = space

[*.yml]
indent_size = 2
indent_style = space

[*.yaml]
indent_size = 2
indent_style = space

[*.md]
indent_size = unset
indent_style = unset

[Makefile]
indent_style = tab
indent_size = 4
